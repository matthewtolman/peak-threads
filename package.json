  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "pub": "bun run build && bun run doc && npm publish",
    "doc": "typedoc src/main.ts"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.57.6",
    "@types/node": "^25.2.3",
    "express": "^5.2.1",
    "typedoc": "^0.28.17",
    "typescript": "~5.9.3",
    "unplugin-dts": "^1.0.0-beta.6",
    "vite": "^7.3.1"
  }
}
